{
    "manifest_version": 3,
    "name": "My React Extension",
    "version": "1.0",
    "description": "A browser extension built with React.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.jpg",
        "48": "icon16.jpg",
        "128": "icon16.jpg"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ]
  }
  